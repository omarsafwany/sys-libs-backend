<h1>New Package</h1>
<%= form_tag( '/packages' ) do |f| %>

    <% if @package.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@package.errors.count, "error") %> prohibited
            this package from being saved:
        </h2>
        <ul>
            <% @package.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= label_tag "Name" %>
    <%= text_field_tag "package[name]" %>
    <%= label_tag "OS", "Operating System" %>
    <%= select_tag "package[os]", "<option>Mac</option><option>Windows</option>", include_blank: 'Select' %>
    <a id="add">add dependency</a>
    <div class="div" id="dependenciesDiv"></div>
    <%= submit_tag "Create", :class => 'success button' %>
    <%= javascript_include_tag "package" %>
<% end %>
<%= link_to 'Back', packages_path %>
