<h1>Packages</h1>

<table>
 <tr>
   <th>Name</th>
   <th>OS</th>
 </tr>

 <% @packages.each do |package| %>
   <tr>
     <td><%= package.name %></td>
     <td><%= package.os %></td>
     <td><%= link_to 'Show', package_path(package) %></td>
     <td><%= link_to 'Edit', edit_package_path(package) %></td>
     <td><%= link_to 'Destroy', package_path(package),
     method: :delete,
     data: { confirm: 'Are you sure?' } %></td>
   </tr>
 <% end %>
</table>


<%= link_to 'New package', new_package_path %>